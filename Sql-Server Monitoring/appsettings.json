{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=master;Trusted_Connection=True;TrustServerCertificate=True;",
    "StorageConnection": "Data Source=LocalStorage.db"
  },
  "Auth": {
    "Authority": "https://example.com/auth",
    "Audience": "sql-monitor-api"
  },
  "AllowedOrigins": [
    "https://localhost:5001",
    "https://localhost:3000"
  ],
  "Monitoring": {
    "DefaultRetentionDays": 30,
    "DefaultIntervalSeconds": 300,
    "DefaultBackupPath": "C:\\SqlBackups"
  }
}
